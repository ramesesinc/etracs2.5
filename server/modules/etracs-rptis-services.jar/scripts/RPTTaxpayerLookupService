import com.rameses.annotations.*
import com.rameses.common.*
import com.rameses.eserver.*;
import java.rmi.server.UID;

public class RPTTaxpayerLookupService
{

	@ProxyMethod
	public def lookupTaxpayers( params ) {
		return [
			[taxpayerid:'E-4795cca5:13cec253f5f:-7ecb', taxpayerno:'0001', taxpayername:'PETER SANTOS', taxpayeraddress:'CEBU CITY'],
			[taxpayerid:'T001', taxpayerno:'0002', taxpayername:'ROBERT DINERO', taxpayeraddress:'CEBU CITY'],
			[taxpayerid:'T002', taxpayerno:'0003', taxpayername:'SHARON STONE', taxpayeraddress:'CEBU CITY'],
		]
	}

	@ProxyMethod
	public def openTaxpayer( objid ) {
		def list = lookupTaxpayers();
		def taxpayer = list.find{it.taxpayerid == objid}
		if ( ! taxpayer ) taxpayer = [:]
		return taxpayer 
	}
	
}
