import com.rameses.annotations.*
import com.rameses.common.*;

class FAASLookupService
{
	@PersistenceContext('rpt')
	def em 

	
	@Service('RPTUtil')
	def utilSvc
	

	@ProxyMethod
	public def lookupFaas( params ) {
		params.state 		= (params.state ? params.state : '') + '%'
		params.taxpayerid 	= (params.taxpayerid ? params.taxpayerid : '') + '%'
		params.tdno 		= params.searchtext
		params.blockno 		= params.searchtext 
		params.searchtext 	= (params.searchtext ? params.searchtext : '') + '%';
		
		def filters = [
			' WHERE f.tdno = $P{tdno} AND f.state LIKE $P{state} AND f.taxpayerid LIKE $P{taxpayerid}',
			' WHERE f.ownername LIKE $P{searchtext} AND f.state LIKE $P{state} AND f.taxpayerid LIKE $P{taxpayerid}',
			' WHERE r.fullpin LIKE $P{searchtext} AND f.state LIKE $P{state} AND f.taxpayerid LIKE $P{taxpayerid}',
			' WHERE rp.cadastrallotno LIKE $P{searchtext} AND f.state LIKE $P{state} AND f.taxpayerid LIKE $P{taxpayerid}',
			' WHERE rp.blockno = $P{blockno} AND f.state LIKE $P{state} AND f.taxpayerid LIKE $P{taxpayerid}',
			' WHERE rp.surveyno LIKE $P{searchtext} AND f.state LIKE $P{state} AND f.taxpayerid LIKE $P{taxpayerid}',
		]

		return utilSvc.getListFromQuery('faas:lookupFaas', filters, params, 'f.objid');
	}



}

