import com.rameses.annotations.*;
import com.rameses.services.extended.*;

class BusinessAccountService extends ActiveCrudListService {

	@ActiveDB("businessaccount")
	def em;

	String pagingKeys = "a.objid";

	@ProxyMethod
	public def getColumns(o) {
		return[
			[name:'code', caption:'Item Code' ],
			[name:'title', caption:'Item Title' ],
			[name:'taxfeetype', caption:'Tax Fee Type' ],
			[name:'paymentmode', caption:'Payment Mode' ],
			[expression:'#{item.surcharge.code} #{item.surcharge.title}', caption:'Surcharge Account', type:'label' ],
			[expression:'#{item.interest.code} #{item.interest.title}', caption:'Interest Account', type:'label' ],
			[name:'department', caption:'Department' ],
		];
	}

	public def open(o) {
		return em.findAccount( o );
	}


}