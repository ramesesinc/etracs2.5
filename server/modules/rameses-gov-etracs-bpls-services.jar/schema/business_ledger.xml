<schema>
	
	<element tablename="business_ledger">
		<field name="objid" primary="true"/>
		<field name="businessid"/>
		<field name="applicationid"/>
	</element>	

	<element name="receivable" tablename="business_receivable">
		<field name="objid" primary="true"/>
		<field name="ledgerid" required="true"/>
		<field name="applicationid" />
		<field name="iyear" required="true"/>
		<field name="iqtr" />
		<field name="account_objid" required="true"/>
		<field name="account_title" required="true"/>
		<field name="lob_objid" />
		<field name="lob_name" />
		<field name="amount" required="true"/>
		<field name="amtpaid" required="true"/>
		<field name="discount" required="true"/>
		<field name="paymentmode" />
		<field name="refid" />
		<field name="reftype" />
		<field name="department" />
		<field name="remarks" />
	</element>	

	<element name="receivable_payment" tablename="business_receivable_payment">
		<field name="objid" primary="true"/>
		<field name="receivableid" required="true"/>
		<field name="businessid" required="true"/>
		<field name="iqtr" />
		<field name="iyear"/>
		<field name="refno" required="true"/>
		<field name="reftype" />
		<field name="refdate" />
		<field name="refid" />
		<field name="amtpaid" required="true"/>
		<field name="surchargepaid" required="true"/>
		<field name="interestpaid" required="true"/>
		<field name="discount" required="true"/>
		<field name="voided" required="true"/>
	</element>	


</schema>