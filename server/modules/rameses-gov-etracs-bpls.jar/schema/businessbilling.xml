<schema>

	<element name="receivable" tablename="businessreceivable">
		<field name="objid" primary="true"/>
		<field name="appid" required="true"/>
		<field name="indexno" required="true"/>
		<field name="item_objid" required="true"/>
		<field name="item_code" required="true"/>
		<field name="item_title" required="true"/>
		<field name="lob_objid" required="true"/>
		<field name="lob_name" required="true"/>
		<field name="amount" required="true"/>
		<field name="amtpaid" required="true"/>
		<field name="balance" required="true"/>
		<field name="lastqtrpaid" required="true"/>
		<field name="allowqtr" required="true"/>
	</element>

	<element name="cashreceipt" tablename="cashreceipt_business">
		<field name="objid" primary="true"/>
		<field name="tradename" required="true" />
		<field name="appid" required="true" />
	</element>

	<element name="credit" tablename="businessreceivable_credit">
		<field name="objid" primary="true"/>	
		<field name="refid" required="true"/>
		<field name="receiptid" required="true"/>
		<field name="principalpaid" required="true"/>
		<field name="surchargepaid" required="true"/>
		<field name="interestpaid" required="true"/>
		<field name="discounted" required="true"/>
		<field name="qtr" required="true"/>
		<field name="year" required="true"/>
	</element>


</schema>
