import com.rameses.annotations.*;
import com.rameses.util.*;
import java.rmi.server.*;
import com.rameses.services.extended.*;

public class BusinessApplicationListService extends ActiveCrudListService {

	@ActiveDB("businessapplication")
	def em;

	@ProxyMethod
	public def getNodes(o) {
		return [
			[name:'draft', caption:'Draft', state:'PENDING'],
			[name:'forapproval', caption:'For Approval', state:'FOR-APPROVAL'],
			[name:'engineering', caption:'Engineering', state:'FOR-ENGINEERING'],
			[name:'assessment', caption:'Assessment', state:'FOR-ASSESSMENT'],
			[name:'forpayment', caption:'For Payment', state:'FOR-PAYMENT'],
			[name:'forpermit', caption:'For Permit', state:'FOR-PERMIT'],
			[name:'active', caption:'Active', state: 'ACTIVE'],
			[name:'forrenewal', caption:'For Renewal', state: 'FOR-RENEWAL'],
		];
	}	

	@ProxyMethod
	public def getColumns(o) {
		return [
			[name:'appno', caption:'Application No'],
			[name:'permitee.name', caption:'Permitee'],
			[name:'tradename', caption:'Trade Name'],
		];
	}

}