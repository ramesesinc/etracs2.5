<?xml version="1.0" encoding="UTF-8"?>
<workunit>
    <invokers>
        <invoker type="consolidation:open" action="open" caption="Consolidation" target="window"  />
        
         <invoker folderid="/txn/rpt/faas" action="init"  caption="Consolidation" index="21"
            txntypeid="CS" txntype="Consolidation" newledger="true" newrpu="true" 
            role="APPRAISER" permission="consolidation.create"/>
            
        <invoker folderid="/menu/txn/rpt/faas" action="init"  caption="Consolidation" index="21"
            txntypeid="CS" txntype="Consolidation" newledger="true" newrpu="true" 
            role="APPRAISER" permission="consolidation.create"/>

         <invoker type="quick_launcher" code="CS01" action="init"  caption="Consolidation" index="21"
            txntypeid="CS" txntype="Consolidation" newledger="true" newrpu="true" 
            role="APPRAISER" permission="consolidation.create"/>
            
   </invokers>
   <code class="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationController">
       
   </code>

    <pageflow>
        <start>
            <transition name="init" to="rp"/>
            <transition name="open" to="open"/>
        </start>
        
        <process name="open">
            <transition to="default" cond="#{consolidation.state == 'DRAFT'}"/>
            <transition to="forapproval" cond="#{consolidation.state == 'FORAPPROVAL'}"/>
            <transition to="forprovsubmission" cond="#{consolidation.state == 'FORPROVSUBMISSION'}"/>
            <transition to="forprovapproval" cond="#{consolidation.state == 'FORPROVAPPROVAL'}"/>
            <transition to="approved" cond="#{consolidation.state == 'APPROVED'}"/>
            <transition to="cancelled" cond="#{consolidation.state == 'CANCELLED'}"/>
        </process>
        
        
        <page name="rp" title="Consolidation: Real Property Information">
            <transition caption="Cancel" to="end"  mnemonic="c" icon="images/toolbars/cancel.png"/>
            <transition caption="Next"  to="rpu" action="initRealProperty" mnemonic="n"  />
        </page>
        
        
        <page name="rpu" title="Consolidation: RPU Information">
            <transition caption="Back" to="rp"  mnemonic="c" icon="images/toolbars/back.png"/>
            <transition caption="Next"  to="default" action="createConsolidation" mnemonic="n"  icon="images/toolbars/next.png"/>
        </page>
        
        
        <page name="default" title="Consolidation (Draft)">
            <transition caption="Close"  to="end"      mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode == 'read'}"/>
            <transition caption="Edit"   to="back-to-default" action="edit"  name="edit" mnemonic="e" shortcut="ctrl E" icon="images/toolbars/edit.png"  visibleWhen="#{mode == 'read'}" role="APPRAISER" permission="consolidation.edit"/>
            <transition caption="Cancel" to="back-to-default" action="cancelEdit" name="cancel" mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode != 'read'}"/>
            <transition caption="Save"   to="back-to-default" action="save" name="save" mnemonic="s" shortcut="ctrl S" icon="images/toolbars/save.png"  visibleWhen="#{mode != 'read'}" />
            <transition caption="Delete" to="delete"  action="delete" confirm="Delete record?"    mnemonic="d" icon="images/toolbars/trash.png"  visibleWhen="#{mode == 'read'}" role="APPRAISER" permission="consolidation.delete"/>
            <transition caption="Submit" to="submit" action="submitForApproval"  mnemonic="m"  visibleWhen="#{mode == 'read'}" confirm="Submit for approval?" role="APPRAISER" />
        </page>
        
        <process name="back-to-default">
            <transition to="default" />
        </process>
        
        <process name="delete">
            <transition to="end"/>
        </process>
        
        <process name="submit">
            <transition to="forapproval" cond="#{consolidation.state == 'FORAPPROVAL'}"/>
            <transition to="forprovapproval" cond="#{consolidation.state == 'FORPROVAPPROVAL'}"/>
            <transition to="forprovsubmission" cond="#{consolidation.state == 'FORPROVSUBMISSION'}"/>
        </process>
        
        
        <!-- CITY-->
        <page name="forapproval" title="Consolidation (For Approval)">
            <transition caption="Close" to="end" mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode == 'read'}" />
            <transition caption="Edit"   to="back-to-forapproval" action="edit" name="edit" mnemonic="e" shortcut="ctrl E" icon="images/toolbars/edit.png"  visibleWhen="#{mode == 'read'}" role="APPROVER"/>
            <transition caption="Cancel" to="back-to-forapproval" action="cancelEdit" name="cancel"  mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode != 'read'}"/>
            <transition caption="Save"   to="back-to-forapproval" action="save" name="save" mnemonic="s" shortcut="ctrl S" icon="images/toolbars/save.png"  visibleWhen="#{mode != 'read'}" />
            <transition caption="Disapprove" to="default" action="disapproveConsolidation" mnemonic="d" visibleWhen="#{mode == 'read'}" confirm="Disapprove Consolidation?" role="APPROVER"/>
            <transition caption="Approve" to="current" action="approveConsolidation" mnemonic="v" icon="images/toolbars/approve.png" visibleWhen="#{mode == 'read'}" confirm="Approve Consolidation?" role="APPROVER"/>
        </page>
        
        <process name="back-to-forapproval">
            <transition to="forapproval"/>
        </process>
        
        
        <!-- MUNICIPALIY -->
        <page name="forprovsubmission" title="Consolidation (For Submission to Province)">
            <transition caption="Close"  to="end" mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode == 'read'}" />
            <transition caption="Edit"   to="back-to-prov-submission" action="edit" name="edit" mnemonic="e" shortcut="ctrl E" icon="images/toolbars/edit.png"  visibleWhen="#{mode == 'read'}" role="RECOMMENDER"/>
            <transition caption="Cancel" to="back-to-prov-submission" action="cancelEdit" name="cancel"  mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode != 'read'}"/>
            <transition caption="Save"   to="back-to-prov-submission" action="save" name="save" mnemonic="s" shortcut="ctrl S" icon="images/toolbars/save.png"  visibleWhen="#{mode != 'read'}" />
            <transition caption="Disapprove" to="default" action="disapproveSubmitToProvince"  mnemonic="d" visibleWhen="#{mode == 'read'}" confirm="Disapprove Consolidation?" role="RECOMMENDER"/>
            <transition caption="Submit to Province" to="provsubmissionapproval" action="submitToProvince" mnemonic="m" visibleWhen="#{mode == 'read'}" confirm="Submit to province?" role="RECOMMENDER"/>
        </page>
        
        <process name="back-to-prov-submission">
            <transition to="forprovsubmission"/>
        </process>
        
        <page name="provsubmissionapproval" title="Consolidation (For Province Approval)">
            <transition caption="Close" to="end" mnemonic="c" icon="images/toolbars/cancel.png"/>
            <transition caption="Disapprove" to="forprovsubmission" action="disapproveSubmittedToProvince"  mnemonic="d" confirm="Disapprove Consolidation?" role="RECOMMENDER"/>
            <transition caption="Approve" to="approved" action="approveSubmittedToProvince"  mnemonic="v" confirm="Approve Consolidation?" role="RECOMMENDER"/>
        </page>
        
        
        <!-- PROVINCE -->
        <page name="forprovapproval" title="Consolidation (Province Approval)">
            <transition caption="Close" to="end" mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode == 'read'}" />
            <transition caption="Edit"   to="back-to-forprovapproval" action="edit" name="edit" mnemonic="e" shortcut="ctrl E" icon="images/toolbars/edit.png"  visibleWhen="#{mode == 'read'}" role="APPROVER"/>
            <transition caption="Cancel" to="back-to-forprovapproval" action="cancelEdit" name="cancel"  mnemonic="c" icon="images/toolbars/cancel.png" visibleWhen="#{mode != 'read'}"/>
            <transition caption="Save"   to="back-to-forprovapproval" action="save" name="save" mnemonic="s" shortcut="ctrl S" icon="images/toolbars/save.png"  visibleWhen="#{mode != 'read'}" />
            <transition caption="Disapprove" to="forprovsubmission" action="disapproveByProvince"  mnemonic="d"  visibleWhen="#{mode == 'read'}" confirm="Disapprove Consolidation?" role="APPROVER"/>
            <transition caption="Approve" to="approved" action="approveByProvince"  mnemonic="v" visibleWhen="#{mode == 'read'}" confirm="Approve Consolidation?" role="APPROVER"/>
        </page>
        
        <process name="back-to-forprovapproval">
            <transition to="forprovapproval"/>
        </process>
        
        <page name="approved" title="Consolidation (Approved)">
            <transition caption="Close" to="end" mnemonic="c" icon="images/toolbars/cancel.png"/>
        </page>
        
        <end />
        
    </pageflow>
    
    <pages> 
        <page name="rp" template="com.rameses.gov.etracs.rpt.consolidation.ui.RealPropertyPage"/>
        <page name="rpu" template="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationRpuPage" />
        <page name="default" template="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationPage"/>
        <page name="forapproval" template="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationPage"/>
        <page name="forprovsubmission" template="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationPage"/>
        <page name="provsubmissionapproval" template="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationPage"/>
        <page name="forprovapproval" template="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationPage"/>
        <page name="approved" template="com.rameses.gov.etracs.rpt.consolidation.ui.ConsolidationPage"/>
    </pages>
</workunit>


